// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("NEXT_PUBLIC_DATABASE_URL")
  directUrl = env("NEXT_PUBLIC_DIRECT_URL")
}

model Area {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  img         String?
  value       String  @unique
  rol         String
}

model Activities {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  img         String?
  place       String
  hour_start  DateTime
  hour_end    DateTime
  urgent      Boolean
}

model Preachs {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  img         String?
}

model LastActivities {
  id    Int     @id @default(autoincrement())
  title String
  img   String?
}


// 1. USUARIOS DEL SISTEMA (Admins y LÃ­deres)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   
  nombre    String
  role      String   @default("LIDER") 
  sede      String?  
}

// 2. EL JOVEN
model Joven {
  id             Int          @id @default(autoincrement())
  nombres        String
  apellidos      String
  
  // LA CLAVE
  documento      String       @unique 
  
  sede           String
  
  // ultimavisita
  ultimaVisita   DateTime     @default(now())
  activo         Boolean      @default(true)

  asistencias    Asistencia[] 
}

// 3. EL HISTORIAL
model Asistencia {
  id        Int      @id @default(autoincrement())
  fecha     DateTime @default(now())
  
  jovenId   Int
  joven     Joven    @relation(fields: [jovenId], references: [id])
}
