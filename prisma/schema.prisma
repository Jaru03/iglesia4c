// prisma/schema.prisma

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"] 
}

datasource db {
  provider  = "postgresql"
}

// --- TUS MODELOS DE LA IGLESIA ---

model Area {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  img         String?
  value       String  @unique 
  rol         String  
}

model Activities {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  img         String?
  place       String
  hour_start  DateTime
  hour_end    DateTime
  urgent      Boolean
}

model Preachs {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  img         String?
}

model LastActivities {
  id    Int     @id @default(autoincrement())
  title String
  img   String?
}

// --- GESTIÓN DE USUARIOS Y JÓVENES ---

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  nombre   String
  
  // El Admin debe ascenderlos manualmente.
  role     String  @default("MIEMBRO") 
  
  sede     String?
}

model Joven {
  id           Int      @id @default(autoincrement())
  nombres      String
  apellidos    String
  documento    String   @unique
  sede         String
  ultimaVisita DateTime @default(now())
  activo       Boolean  @default(true)
  
  asistencias  Asistencia[]
}

model Asistencia {
  id      Int      @id @default(autoincrement())
  fecha   DateTime @default(now())
  
  jovenId Int
  joven   Joven    @relation(fields: [jovenId], references: [id])
}