// prisma/schema.prisma

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- TUS MODELOS (No han cambiado) ---

model Area {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  img         String?
  value       String  @unique
  rol         String
}

model Activities {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  img         String?
  place       String
  hour_start  DateTime
  hour_end    DateTime
  urgent      Boolean
}

model Preachs {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  img         String?
}

model LastActivities {
  id    Int     @id @default(autoincrement())
  title String
  img   String?
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  nombre   String
  role     String  @default("LIDER")
  sede     String?
}

model Joven {
  id           Int          @id @default(autoincrement())
  nombres      String
  apellidos    String
  documento    String       @unique
  sede         String
  ultimaVisita DateTime     @default(now())
  activo       Boolean      @default(true)
  asistencias  Asistencia[]
}

model Asistencia {
  id      Int      @id @default(autoincrement())
  fecha   DateTime @default(now())
  jovenId Int
  joven   Joven    @relation(fields: [jovenId], references: [id])
}